<%= form_with(model: user, url: backoffice_users_path, class: "contents") do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2>
        <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
      </h2>

      <ul class="list-disc ml-6">
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 my-5">
    <div>
      <%= form.label :name, class: "text-gray-900" %>
      <%= form.text_field :name, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-900 focus:outline-yellow-500": user.errors[:name].none?, "border-red-400 focus:outline-yellow-500": user.errors[:name].any?}] %>
    </div>

    <div>
      <%= form.label :email, class: "text-gray-900" %>
      <%= form.email_field :email, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-900 focus:outline-yellow-500": user.errors[:email].none?, "border-red-400 focus:outline-yellow-500": user.errors[:email].any?}] %>
    </div>

    <div>
      <%= form.label :birth_date, class: "text-gray-900" %>
      <%= form.date_field :birth_date, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-900 focus:outline-yellow-500": user.errors[:birth_date].none?, "border-red-400 focus:outline-yellow-500": user.errors[:birth_date].any?}] %>
    </div>

    <div>
      <%= form.label :gender, class: "text-gray-900" %>
      <%= form.select :gender, [["Male", "male"], ["Female", "female"]],
                  { prompt: "Select Gender" },
                  { class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-900 focus:outline-yellow-500": user.errors[:gender].none?, "border-red-400 focus:outline-yellow-500": user.errors[:gender].any?}] } %>
    </div>
  </div>

  <div class="my-5">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-yellow-500 hover:bg-yellow-400 text-gray-900 font-medium cursor-pointer" %>
  </div>
<% end %>
