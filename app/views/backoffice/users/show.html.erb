<div class="min-h-screen px-4 sm:px-12 lg:px-48 pt-20">
  <%= render "backoffice/layouts/header",
    title: "Showing user",
    link_text: "Back to users",
    link_path: backoffice_users_path
  %>
  <%= render @user %>
  <%= link_to "Edit this user", edit_backoffice_user_path(@user), class: "mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <div class="inline-block ml-2">
    <%= button_to "Destroy this user", backoffice_user_path(@user), method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
  </div>
</div>
