<div class="w-full min-h-screen pt-16 flex flex-col md:flex-row flex-1">
  <section class="bg-gray-800 w-full md:w-1/3 p-8 flex flex-col items-center justify-center">
    <div class="w-40 h-40 rounded-full bg-yellow-400 mb-6 border-4 border-gray-700 shadow-xl"></div>
    <h2 class="text-4xl font-extrabold tracking-tight text-yellow-400">
      <%= @user.name %>
    </h2>
    <p class="text-gray-400 text-xl mt-2">
      <%= get_age(@user.birth_date) %> anos
    </p>
  </section>
  <section class="bg-gray-900 w-full md:w-2/3 p-8 flex flex-col justify-between">
    <div>
      <h3 class="text-3xl font-bold text-white mb-6">
        Profile
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-4">
          <p>
            <span class="font-semibold text-yellow-400">
              Nome Completo:
            </span>
            <span class="text-gray-300">
              <%= @user.name %>
            </span>
          </p>
          <p>
            <span class="font-semibold text-yellow-400">
              Email:
            </span>
            <span class="text-gray-300">
              <%= @user.email %>
            </span>
          </p>
          <p>
            <span class="font-semibold text-yellow-400">
              Data de Nascimento:
            </span>
            <span class="text-gray-300">
              <%= @user.birth_date.strftime("%d/%m/%Y") %>
            </span>
          </p>
          <p>
            <span class="font-semibold text-yellow-400">
              Gênero:
            </span>
            <span class="text-gray-300">
              <%= @user.gender %>
            </span>
          </p>
        </div>
        <div class="space-y-4">
          <p>
            <span class="font-semibold text-yellow-400">
              Cidade:
            </span>
            <span class="text-gray-300">
              São Paulo, SP
            </span>
          </p>
          <p>
            <span class="font-semibold text-yellow-400">
              Telefone:
            </span>
            <span class="text-gray-300">
              (11) 98765-4321
            </span>
          </p>
        </div>
      </div>
    </div>
    <div class="mt-8 flex gap-4">
      <button class="bg-yellow-400 text-gray-900 px-6 py-3 rounded-lg font-semibold hover:bg-yellow-500 transition-colors">
        Editar
      </button>
      <button class="bg-gray-700 text-gray-300 px-6 py-3 rounded-lg font-semibold hover:bg-gray-600 transition-colors">
        Voltar
      </button>
    </div>
  </section>
</div>
