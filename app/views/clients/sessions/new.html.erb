<section class="min-h-screen flex h-16 items-stretch text-white">
  <div class="lg:flex w-1/2 hidden bg-gray-900 bg-no-repeat bg-cover relative items-center">
    <div class="absolute bg-gray-800 opacity-60 inset-0 z-0"></div>
    <div class="w-full px-24 z-10">
      <h1 class="text-5xl font-bold text-left tracking-wide text-yellow-500">Keep it Special</h1>
      <p class="text-3xl my-4 text-yellow-300">
        Capture your personal memory in a unique way, anywhere.
      </p>
      <p class="text-lg text-yellow-200 mt-6">
        "Push yourself because no one else is going to do it for you."
      </p>
    </div>
  </div>

  <div class="lg:w-1/2 w-full flex h-full items-center justify-center bg-gray-900 text-white">
    <div class="absolute lg:hidden z-10 inset-0 bg-gray-900 bg-no-repeat bg-cover items-center">
      <div class="absolute bg-black opacity-60 inset-0 z-0"></div>
    </div>
      <div class="w-full py-6 z-20 m-8">
    <div class="text-center mb-8">
      <h1 class="text-4xl sm:text-5xl font-bold text-yellow-500">
        Gym Pro
      </h1>
      <p class="mt-4 text-lg sm:text-xl text-gray-300">
        Capture your progress and achieve your fitness goals.
      </p>
    </div>
    <%= form_for(resource, as: resource_name, url: clients_client_session_path, html: { class: "space-y-6 m-4" }) do |f| %>
      <div>
        <%= f.email_field :email, autofocus: true, autocomplete: "E-mail", placeholder: "Email", class: "block w-full p-4 text-lg rounded-lg bg-gray-700 text-yellow-300 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:bg-gray-700" %>
      </div>
      <div>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "block w-full p-4 text-lg rounded-lg bg-gray-700 text-yellow-300 focus:outline-none focus:ring-2 focus:ring-yellow-500" %>
      </div>
      <div class="text-right text-gray-400 hover:underline hover:text-yellow-300">
        <% if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-yellow-300 hover:text-yellow-100" %>
        <% end %>
      </div>
      <div>
        <%= f.submit "Log in", class: "uppercase block w-full p-4 text-lg rounded-full bg-yellow-500 hover:bg-yellow-600 focus:outline-none transition duration-300 ease-in-out transform hover:scale-105" %>
      </div>
    <% end %>
      </div>
  </div>
</section>
